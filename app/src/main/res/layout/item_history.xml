<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="33dp"
    android:layout_marginEnd="33dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="17dp"
    app:strokeColor="@color/dark_sea_green"
    app:strokeWidth="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="22dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_history_desc"
            style="@style/HeadlineText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="69dp"
            android:padding="20dp"
            android:textColor="@color/dark_sea_green"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/iv_history"
            app:layout_constraintStart_toStartOf="@id/iv_history"
            app:layout_constraintTop_toBottomOf="@id/iv_history"
            tools:text="@tools:sample/lorem" />

        <ImageButton
            android:id="@+id/btn_delete_history"
            app:layout_constraintTop_toBottomOf="@id/tv_history_desc"
            app:layout_constraintEnd_toEndOf="@id/tv_history_desc"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:src="@drawable/delete_icon"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>