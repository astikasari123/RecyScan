<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_card_scan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/dark_brown"
    app:cardCornerRadius="45dp"
    app:cardElevation="0dp"
    android:background="@android:color/transparent"
    android:foreground="@android:color/transparent"
    app:rippleColor="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_to_set"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_to_set"
            style="@style/HeadlineText"
            android:gravity="center"
            android:textColor="@color/pale_green"
            android:textSize="17.4sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_to_set"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_to_set"
            app:layout_constraintTop_toTopOf="@id/iv_to_set" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>